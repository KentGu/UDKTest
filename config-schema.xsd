<?xml version="1.0" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.w3school.com.cn" xmlns="http://www.w3school.com.cn" elementFormDefault="qualified">
<!--               Attribute List                -->
<!--
	Attribute Name:		actionType
	Scope:				test point
	Description:		Identify how to handle with the web element
-->	
	<xs:attribute name="actionType" use="required" >
		<xs:simpleType>
			<xs:restiction base="xs:string">
				<xs:enumeration value="click" />
				<xs:enumeration value="hover" />
				<xs:enumeration value="input" />
				<xs:enumeration value="dragdrop" />
			</xs:restiction>
		</xs:simpleType>
	</xs:attribute>

<!--
	Attribute Name:		element
	Scope:				test point/validation point
	Description:		Identify how to allocate the web element
-->			
	<xs:attribute name="element" use="required" >
		<xs:simpleType>
			<xs:restiction base="xs:string">
				<xs:enumeration value="id" />
				<xs:enumeration value="name" />
				<xs:enumeration value="xpath" />
				<xs:enumeration value="tag" />
				<xs:enumeration value="css" />
				<xs:enumeration value="class" />
			</xs:restiction>
		</xs:simpleType>
	</xs:attribute>

<!--
	Attribute Name:		validateType
	Scope:				validation point
	Description:		Identify how to allocate the web element
-->		
	<xs:attribute name="validateType" use="required" >
		<xs:simpleType>
			<xs:resticition base="xs:string" >
				<xs:enumeration value="css" />
				<xs:enumeration value="screenshot" />
				<xs:enumeration value="textValue" />
			</xs:resticition>
		</xs:simpleType>
	</xs:attribute>
	
<!--
	Attribute Name:		value
	Scope:				All
	Description:		Contains all attribute value
-->			
	<xs:attribute name="value" type="xs:string" use="required" />
	
<!--
	Attribute Name:		browser
	Scope:				module
	Description:		Contains all attribute value
-->				
	<xs:attribute name="browser" use="required" >
		<xs:simpleType>
			<xs:resticition base="xs:string" >
				<xs:enumeration value="chrome" />
				<xs:enumeration value="firefox" />
				<xs:enumeration value="ie" />
				<xs:enumeration value="all" />
			</xs:resticition>
		</xs:simpleType>
	</xs:attribute>	
	
	
	
<!--               Element List                -->	
<!--
	Element Name:		validation point
	Description:		Contains how to validate the test point
-->		
	<xs:element name="validationPoint" maxOccurs="unbounded" >
		<xs:complexType>
			<xs:attribute ref="element" ></xs:attribute>
			<xs:attribute ref="value" />
		</xs:complexType>
	</xs:element>

<!--
	Element Name:		test point
	Description:		Contains the test point detail
-->		
	<xs:element name="testPoint" maxOccurs="unbounded" >
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="validationPoint" />
			</xs:sequence>
			<xs:attribute ref="actionType" />
			<xs:attribute ref="element" />
			<xs:attribute ref="value" />
		</xs:complexType>
	</xs:element>	

<!--
	Element Name:		module
	Description:		Contains the module detail
-->	
	<xs:element name="module" maxOccurs="unbounded" >
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="testPoint" />
			</xs:sequence>
			<xs:attribute ref="browser" />
		</xs:complexType>
	</xs:element>

<!--
	Element Name:		Test Cases
	Description:		Contains all test cases
-->	
	<xs:element name="testCases">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="module" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>